<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>

    
    <!-- File Appender -->
    <File name="File" fileName="c:/log/app.log">
      <PatternLayout
        pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
    </File>

  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="File" />
    </Root>
  </Loggers>
</Configuration>